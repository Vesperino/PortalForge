# PortalForge Backend Environment Variables
# Copy this file to .env and fill in your values

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://localhost:22022

# Database (Supabase PostgreSQL)
ConnectionStrings__DefaultConnection=Host=db.xxx.supabase.co;Database=postgres;Username=postgres;Password=YOUR_PASSWORD_HERE

# Supabase
Supabase__Url=https://xxx.supabase.co
Supabase__ServiceRoleKey=YOUR_SERVICE_ROLE_KEY_HERE

# JWT Configuration
Jwt__Secret=YOUR_RANDOM_SECRET_HERE_MIN_32_CHARS
Jwt__Issuer=PortalForge
Jwt__Audience=PortalForge
Jwt__ExpirationMinutes=480

# Logging
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning

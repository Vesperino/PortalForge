# PortalForge Backend Environment Variables
# Copy this file to .env and fill in your values

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Production
# Note: In Docker, app listens on port 5000 internally (mapped to 22022 externally)
ASPNETCORE_URLS=http://0.0.0.0:5000

# Database (Supabase PostgreSQL)
ConnectionStrings__DefaultConnection=Host=db.mqowlgphivdosieakzjb.supabase.co;Database=postgres;Username=postgres;Password=YOUR_DB_PASSWORD_HERE

# Supabase Configuration
Supabase__Url=https://xxx.supabase.co
Supabase__Key=YOUR_ANON_KEY_HERE
Supabase__ServiceRoleKey=YOUR_SERVICE_ROLE_KEY_HERE
Supabase__JwtSecret=YOUR_SUPABASE_JWT_SECRET_HERE

# IMPORTANT: Get these values from Supabase Dashboard:
# - Anon Key: Project Settings -> API -> Project API keys -> anon (public)
# - Service Role Key: Project Settings -> API -> Project API keys -> service_role (secret)
# - JWT Secret: Project Settings -> API -> JWT Settings -> JWT Secret
#
# Anon Key is used for Supabase Auth client operations (login, register, etc.)
# Service Role Key is for admin operations that bypass RLS
# JWT Secret is used to verify JWT tokens issued by Supabase Auth

# Application URLs
AppSettings__FrontendUrl=https://krablab.pl/portalforge/fe
AppSettings__ApiUrl=https://krablab.pl/portalforge/be

# Email Configuration (SMTP)
# Note: If using Supabase SMTP, email sending is handled by Supabase automatically
# These settings are only needed for custom email notifications
EmailSettings__SmtpServer=YOUR_SMTP_SERVER_HERE
EmailSettings__SmtpPort=587
EmailSettings__UseTLS=true
EmailSettings__Username=YOUR_SMTP_USERNAME_HERE
EmailSettings__Password=YOUR_SMTP_PASSWORD_HERE
EmailSettings__FromEmail=YOUR_FROM_EMAIL_HERE
EmailSettings__FromName=PortalForge

# Logging
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning

# PortalForge Backend Environment Variables
# Copy this file to .env and fill in your values

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Production
# Note: In Docker, app listens on port 5000 internally (mapped to 22022 externally)
ASPNETCORE_URLS=http://0.0.0.0:5000

# Database (Supabase PostgreSQL)
ConnectionStrings__DefaultConnection=Host=db.mqowlgphivdosieakzjb.supabase.co;Database=postgres;Username=postgres;Password=YOUR_DB_PASSWORD_HERE

# Supabase Configuration
Supabase__Url=https://mqowlgphivdosieakzjb.supabase.co
Supabase__ServiceRoleKey=YOUR_SERVICE_ROLE_KEY_HERE
Supabase__JwtSecret=YOUR_SUPABASE_JWT_SECRET_HERE

# IMPORTANT: Get your JWT Secret from Supabase Dashboard:
# Project Settings -> API -> JWT Settings -> JWT Secret
# This is used to verify JWT tokens issued by Supabase Auth

# Logging
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning
